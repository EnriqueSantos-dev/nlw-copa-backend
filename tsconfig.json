{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",                                
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true                                 
  },
  "exclude": ["node_modules", "build"]
}
